doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
  body.d-flex.align-items-center.min-vh-100.bg-light
    .container 
      .row.justify-content-center 
        .card.shadow
          .card-body.p-5 
            h2.text-center.mb-4 Login 
            form(method="POST" action="/login")
              //- Email
              .mb-3 
                label.form-label(for="email") Email 
                input#email.form-control(type="email" name="email" required)
              //- Password
              .mb-3 
                label.form-label(for="password") Password
                input#password.form-control(type="password" name="password" required)
              //- Hidden fields
              input(type="hidden" name="client_id" value=client_id)
              input(type="hidden" name="redirect_uri" value=redirect_uri)
              input(type="hidden" name="state" value=state)
              input(type="hidden" name="code_challenge" value=code_challenge)
              input(type="hidden" name="scope" value=scope)

              button.btn.btn-primary.w-100(type="submit") Login

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous")